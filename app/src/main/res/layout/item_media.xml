<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content_root"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <by.geth.gethsemane.ui.view.AnimatableImageView
        android:id="@+id/media_audio_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:src="@drawable/anim_audio"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/ItemTitleText"
            android:id="@+id/media_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/ItemSubtitleText"
            android:id="@+id/media_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/media_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="6dp"
        android:src="@drawable/ic_share_outline"
        tools:ignore="ContentDescription"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/media_download_group"
        android:layout_width="32dp"
        android:layout_height="32dp">

        <ImageView
            android:id="@+id/media_download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_download"
            tools:ignore="ContentDescription"/>

        <ProgressBar
            android:id="@+id/media_download_progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/media_download_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="6dp"
            android:src="@drawable/ic_trash"
            tools:ignore="ContentDescription"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>